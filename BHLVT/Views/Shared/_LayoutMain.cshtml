    <link href="~/public/jq/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/public/jq/themes/icon.css">
    <style>
        .field-validation-valid {
            color: red;
            font-size: small;
            padding-top: 10px;
        }
		.main-header .sidebar-toggle {
			padding: 7px 12px;
		}
		.main-header .navbar {
			min-height: 35px;
			height: 35px;
		}
		@Html.Raw("@media (max-width: 991px)")
		{
			.navbar-custom-menu .navbar-nav>li>a {
				padding-top: 7px !important;
				padding-bottom: 7px !important;
			}
		}
		
		.navbar-nav>li>a {
			padding-top: 7px;
			padding-bottom: 7px;
		}
		
		.main-header .logo {
			line-height: 35px;
			height: 35px;
		}
		.main-sidebar {
			padding-top: 35px;
		}
		
        .main-header .navbar {
            /*height: 40px;*/
        }

        body {
            /*font-size: 13px;*/
            /*color: black;*/
        }

        .textbox {
            border-radius: 0px !important;
        }

        .control-sidebar {
            padding-top: 40px;
        }

        .modal.fade .modal-dialog {
            -webkit-transform: scale(0.1);
            -moz-transform: scale(0.1);
            -ms-transform: scale(0.1);
            transform: scale(0.1);
            top: 300px;
            opacity: 0;
            -webkit-transition: all 0.3s;
            -moz-transition: all 0.3s;
            transition: all 0.3s;
        }

        .modal.fade.in .modal-dialog {
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            -webkit-transform: translate3d(0, -300px, 0);
            transform: translate3d(0, -300px, 0);
            opacity: 1;
        }
        /**Customize styles*/
        .textbox .textbox-text {
            font-size: 12px;
        }
        .textbox {
            color: black;
        }

        .l-btn:hover, .l-btn {
            border-radius: 0px;
        }

        .menu-active {
            border-radius: 0px;
        }
        .tabs li a.tabs-inner {
            border-radius: 0px;
            color: #5b5d5f;
        }
        .tabs li a.tabs-inner:hover {
            color: #5b5d5f;
        }
        .l-btn-text {
            line-height: 23px;
        }

    </style>

            @*
            
            @Styles.Render("~/Content/modules")

           
            *@
    

    @RenderSection("styles", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini sidebar-collapse">
    <div class="wrapper">
        @Html.Partial("_PartialView/_Header")
        @Html.Partial("_PartialView/_LeftSide")
        @Html.Action("RenderLeftSide", "Home", new {  area=""  })
        <div class="content-wrapper">
            <div class="" style="padding:0px 10px;">
                @{Html.RenderPartial("_Alert");}
            </div>
            @RenderBody()
        </div>
        @Html.Partial("_PartialView/_Footer")
        @Html.Partial("_PartialView/_ControlSide")
