@using BHLVTBLL.Services.XConfig
@model Dictionary<string, object>
@{
    WebView web_view = new WebView((WebView)Model["web_view"]);
    //var web_view = (WebView)Model["web_view"];
    web_view = (WebView)((WebView)(web_view)
                    .setPartialViewName("tab1_gen_information")
                    .SetWebViewPage(this)).Prepare();
}
<div class="row clearfix">
    <div class="col-md-12">
        <div class="col-md-6 col-xs-6 col-sm-6">
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-3 control-label">@web_view.GetLabelInput("customer_name_tab1")</label>
                    <div class="col-md-5 col-sm-5 col-xs-5">
                        @Html.Raw(web_view.CreateTextInput("customer_name_tab1").Widget())
                    </div>
                    <div class="col-md-2 col-sm-2 col-xs-2" style="padding:0px 3px">
                        <input type="button" value="@web_view.GetLabelInput("btn_select_customer_tab1")" id="btn_select_customer_tab1" class="btn btn-xs btn-flat"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-3 control-label">@web_view.GetLabelInput("buyer_name_tab1")</label>
                    <div class="col-md-7 col-sm-7 col-xs-7">
                        @Html.Raw(web_view.CreateTextInput("buyer_name_tab1").Widget())
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-3 control-label">@web_view.GetLabelInput("description_tab1")</label>
                    <div class="col-md-7 col-sm-7 col-xs-7">
                        @Html.Raw(web_view.CreateTextInput("description_tab1").Widget())
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-3 control-label">@web_view.GetLabelInput("contract_tab1")</label>
                    <div class="col-md-7 col-sm-7 col-xs-7">
                        @Html.Raw(web_view.CreateTextInput("contract_tab1").Widget())
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-6 col-sm-6">
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-4 control-label">@web_view.GetLabelInput("author_date_tab1")</label>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        @Html.Raw(web_view.CreateTextInput("author_date_tab1").Widget())
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-4 control-label">@web_view.GetLabelInput("number_order_tab1")</label>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        @Html.Raw(web_view.CreateTextInput("number_order_tab1").Widget())
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-4 control-label">@web_view.GetLabelInput("out_date_order_tab1")</label>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        @Html.Raw(web_view.CreateTextInput("out_date_order_tab1").Widget())
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-4 control-label">@web_view.GetLabelInput("rate_tab1")</label>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        <div class="col-md-6 col-sm-6" style="padding:0px">
                            @Html.Raw(web_view.CreateTextInput("unit_rate_tab1").Widget())
                        </div>
                        <div class="col-md-6 col-sm-6" style="padding:0px">
                            @Html.Raw(web_view.CreateTextInput("rate_tab1").Widget())
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-4 control-label">@web_view.GetLabelInput("status_tab1")</label>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        @Html.Raw(web_view.CreateTextInput("status_tab1").Widget())
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-sm-4 control-label">@web_view.GetLabelInput("status_doc_tab1")</label>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        @Html.Raw(web_view.CreateTextInput("status_doc_tab1").Widget())
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
