<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Phần mềm bán hàng</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Themes/AdminLTE/css")
    @*<link href="~/Themes/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/dist/css/skins/_all-skins.min.css" rel="stylesheet" />*@


    @Styles.Render("~/Content/modules")
    @*<link href="~/public/jq/themes/default/easyui.css" rel="stylesheet" />*@

    <style>
        .field-validation-valid {
            color: red;
            font-size: small;
            padding-top: 10px;
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    
    <div class="container">
        @*Html.Partial("_PartialView/_Header")*@
        @*Html.Partial("_PartialView/_LeftSide")*@
        @*Html.Action("RenderLeftSide", "Home")*@
        @RenderBody()
        @*Html.Partial("_PartialView/_Footer")*@
        @*Html.Partial("_PartialView/_ControlSide")*@
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0
            </div>
            <strong>Copyright &copy; 2016-2017 <a href="trunglu885@gmail.com">The_dead29</a>.</strong> All rights
            reserved.
        </footer>
    </div>
    @Scripts.Render("~/Themes/AdminLTE/jquery")
    @*<script src="~/Themes/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>*@
    @Scripts.Render("~/Themes/AdminLTE/js")
    @*<script src="~/Themes/AdminLTE/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Themes/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Themes/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script src="~/Themes/AdminLTE/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Themes/AdminLTE/bower_components/fastclick/lib/fastclick.js"></script>
    <script src="~/Themes/AdminLTE/dist/js/adminlte.min.js"></script>*@
    

    @*Scripts.Render("~/Themes/AdminLTE/js/datepicker")*@
    @Scripts.Render("~/bundles/modules")
    @*<script src="~/public/jq/jquery.easyui.min.js"></script>
    <script src="~/public/js/NumberFormat154.js"></script>
    <script src="~/public/js/bootstrap-datepicker.js"></script>
    <script src="~/public/js/notify.js"></script>*@
    

    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>