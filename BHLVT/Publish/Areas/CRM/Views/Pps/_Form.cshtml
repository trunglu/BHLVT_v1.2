@model BHLVTDAL.Data.tblprogress
@{
    ViewBag.Title = "_Form";
    var name_btn = ViewBag.btn != null ? ViewBag.btn : "Thêm";
    var class_btn = name_btn != "Thêm" ? "btn btn-flat btn-sm btn-warning" : "btn btn-flat btn-sm btn-success";
}


<div class="content">
    <div class="col-md-12">
        <form class="form-horizontal" action="@Url.RouteUrl(new { controller = "Pps", action = "Post", area = "crm" })" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(model=>model.customerid)
            @Html.HiddenFor(model=>model.progressid,new {required=false })
            <div class="form-group">
                @Html.LabelFor(model => model.date, "Ngày", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.date, new { @class = "form-control input-sm", placeholder = "Ngày", required = "true" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.content, "Nội dung", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.content, new { @class = "form-control input-sm", placeholder = "Nội dung", required = "true",rows="5" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" name="btn" class="@class_btn" value="@name_btn"/>
                </div>
            </div>
        </form>
    </div>
</div>
