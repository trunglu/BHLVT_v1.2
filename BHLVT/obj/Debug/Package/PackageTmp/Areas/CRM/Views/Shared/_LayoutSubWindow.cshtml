<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SO Software</title>

    <link href="~/Themes/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/Themes/AdminLTE/dist/css/skins/_all-skins.min.css" rel="stylesheet" />


    <link href="~/public/jq/themes/default/easyui.css" rel="stylesheet" />
    <style>
        .field-validation-valid {
            color: red;
            font-size: small;
            padding-top: 10px;
        }

        .main-header .navbar {
            /**/ height: 40px;
        }

        body {
            font-size: 13px;
        }

        .textbox {
            border-radius: 0px !important;
        }

        .control-sidebar {
            padding-top: 40px;
        }

        .modal.fade .modal-dialog {
            -webkit-transform: scale(0.1);
            -moz-transform: scale(0.1);
            -ms-transform: scale(0.1);
            transform: scale(0.1);
            top: 300px;
            opacity: 0;
            -webkit-transition: all 0.3s;
            -moz-transition: all 0.3s;
            transition: all 0.3s;
        }

        .modal.fade.in .modal-dialog {
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            -webkit-transform: translate3d(0, -300px, 0);
            transform: translate3d(0, -300px, 0);
            opacity: 1;
        }
    </style>
   @RenderSection("styles",required:false)
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
    @*@Scripts.Render("~/Themes/AdminLTE/jquery")*@
    <script src="~/Themes/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    @*@Scripts.Render("~/Themes/AdminLTE/js")*@

    <script src="~/Themes/AdminLTE/bower_components/jquery-ui/jquery-ui.min.js"></script>
    @Scripts.Render("~/bundles/modules")
    @RenderSection("scripts", required: false)
</body>
</html>