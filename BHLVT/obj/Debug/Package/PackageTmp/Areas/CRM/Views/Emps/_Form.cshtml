@model CRMLVTBLLmd.Models.ViewModel.tblemployeeView
@{
    ViewBag.Title = "_Form";
    var name_btn = ViewBag.btn != null ? ViewBag.btn : "Thêm";
    var class_btn = name_btn != "Thêm" ? "btn btn-sm btn-warning" : "btn btn-sm btn-success";
}
@section styles{
<link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/bootstrap-daterangepicker/daterangepicker.css">
<!-- bootstrap datepicker -->
<link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">

<link href="~/public/css/customizestyle.css" rel="stylesheet" />   
   <style>
       .textbox {
        border-bottom:1px solid #c2d0e4;
       }
    </style>
}
<div class="content">

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h4>@name_btn Nhân viên</h4>
            </div>
            <div class="col-md-8" style="padding:5px 7px">
                <form class="form-horizontal" method="post" action="@Url.RouteUrl(new {controller="Emps",action="Post",area="crm" })">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(model => model.username, "Tên đăng nhập", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.username, new { @class = "form-control input-sm", placeholder = "User name" ,required="true"})
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.password, "Mật khẩu", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.PasswordFor(model => model.password, new { @class = "form-control input-sm", placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.cofirmpassword, "Nhập lại mật khẩu", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.PasswordFor(model => model.cofirmpassword, new { @class = "form-control input-sm", placeholder = "Confirm pass" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.firstname, "Tên ", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.firstname, new { @class = "form-control input-sm", placeholder = "First name" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.lastname, "Họ", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.TextBoxFor(model => model.lastname, new { @class = "form-control input-sm", placeholder = "Last name" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.sex, "Giới tính", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            <div class="" >
                                 @Html.RadioButtonFor(model => model.sex, "1") Nam &nbsp; &nbsp;
                                 @Html.RadioButtonFor(model => model.sex, "0") Nữ
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.birthday, "Ngày sinh", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-3">

                            @Html.TextBoxFor(model => model.birthday, new { @class = "form-control input-sm", placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.workday, "Ngày vào làm", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.workday, new { @class = "form-control input-sm", placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.department, "Bộ phận", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            <div class="" >
                                @Html.DropDownListFor(model => model.department, (IEnumerable<SelectListItem>)ViewBag.ldepart, new { @class = "easyui-combobox form-control input-sm",style="width:200px" })

                            </div>
                            </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.position, "Chức vụ", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.position, new { @class = "form-control input-sm", placeholder = "Chức vụ" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.email, "Email", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.TextBoxFor(model => model.email, new { @class = "form-control input-sm", placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.mobile, "Số di động", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.TextBoxFor(model => model.mobile, new { @class = "form-control input-sm", placeholder = "Mobile" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(model => model.prinum, "Số nội bộ", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.TextBoxFor(model => model.prinum, new { @class = "form-control input-sm", placeholder = "Số nội bộ" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.mission, "Phân quyền", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            <div class="">
                                @Html.RadioButtonFor(model => model.mission, "A") Admin &nbsp;
                                @Html.RadioButtonFor(model => model.mission, "M") Nhân Viên &nbsp;
                                @Html.RadioButtonFor(model => model.mission, "U") Khóa &nbsp;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10 " style="margin-top:20px">
                            <input type="submit" name="btn" class="@class_btn" value="@name_btn"/>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
                
            </div>
            <div class="clearfix"></div>
        </div>
       
    </div>
    <div class="clearfix"></div>
</div>

@section scripts {

    <!-- date-range-picker -->
    <script src="~/Themes/AdminLTE/bower_components/moment/min/moment.min.js"></script>
    <script src="~/Themes/AdminLTE/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <!-- bootstrap datepicker -->
    <script src="~/Themes/AdminLTE/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#workday').datepicker({
                format: "dd/mm/yyyy"
            });
            if ($('#workday').val() == "") {
                $("#workday").datepicker().datepicker("setDate", new Date());
            }
            $('#birthday').datepicker({
                format: "dd/mm/yyyy"
            });
            if ($('#birthday').val() == "") {
                $("#birthday").datepicker().datepicker("setDate", new Date());
            }
          

        });

    </script>
}